{% extends 'layout/base.html.twig' %}
{% import 'layout/macros/form_render.html.twig' as custom_form_render %}

{% block body %}
    <div class="card">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="card-body">
                    <div class="row">
                        <div class="col-6 d-flex justify-content-start">
                            <h1 class="card-title">
                                {% if isNew %}
                                    Create
                                {% else %}
                                    Edit
                                {% endif %} status
                            </h1>
                        </div>
                        <div class="col-6 d-flex justify-content-end">
                            <a href="{{ path('app_status_list') }}" class="btn btn-warning ml-2"><i
                                        class="fa fa-arrow-left" aria-hidden="true"></i> Return</a>
                        </div>
                    </div>
                    <hr/>

                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="row">
                            {{ custom_form_render.row_text(form.label, "col-md-4 col-12 mt-3") }}
                        </div>
                        <div>
                            {{ custom_form_render.row_text(form.colorCode, "col-md-4 col-12 mt-3") }}
                        </div>
                        <div class="row">
                            {{ custom_form_render.row_checkbox(form.isEnabled, "col-md-4 col-12 mt-3") }}
                        </div>
                        <div class="row justify-content-center mt-5">
                            <button type="submit" class="btn btn-success col-md-2">
                                {% if isNew %}
                                    Create
                                {% else %}
                                    Edit
                                {% endif %} status
                            </button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
