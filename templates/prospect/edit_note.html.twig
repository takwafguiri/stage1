{% import 'layout/macros/form_render.html.twig' as custom_form_render %}
{% block body %}
    <div class="modal" id="myModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Note</h5>
                    <button type="button" class="close" id="hide-x" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ form_start(form, {'action': path('app_notes_edit', { 'note': note })}) }}
                    {{ custom_form_render.row_text(form.message, 'col-8 mt-3') }}
                    {{ custom_form_render.row_text(form.status, 'col-8 mt-3') }}
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" id="hide-button" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">
                            {% if isNew %}
                                Create
                            {% else %}
                                Edit
                            {% endif %} note
                        </button>
                    </div>
                    {{ form_end(form) }}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% block javascript %}
<script >
    $(document).ready(function () {
    $('#hide-x').click(function (e){
        $('#myModal').hide();
    });
    $('#hide-button').click(function (e){
        $('#myModal').hide();
    });
});
</script>
{% endblock %}